<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexLayoutDemo.FlexLayoutPage"
             Title="FlexLayoutPage">
    <FlexLayout  Direction="Column">
        <!-- Header -->
        <Label Text="HEADER" FontSize="18" BackgroundColor="Aqua" HorizontalTextAlignment="Center"></Label>
        <!-- Body -->
        <FlexLayout FlexLayout.Grow="1">
            <!-- Content -->
            <Label Text="CONTENT" FlexLayout.Grow="1" FontSize="18" BackgroundColor="Gray" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
           <!-- Navigation items -->
            <BoxView FlexLayout.Basis="150" Color="Blue" FlexLayout.Order="-1"></BoxView>
            <!-- Aside items -->
            <BoxView FlexLayout.Basis="50" Color="Green"></BoxView>
            
        </FlexLayout>
        <!-- Footer -->
        <Label Text="FOOTER" FontSize="18" BackgroundColor="PINK" HorizontalTextAlignment="Center"></Label>
    </FlexLayout>
    
</ContentPage>